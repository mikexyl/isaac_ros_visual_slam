// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "isaac_ros_vslam_dev",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerFile": "Dockerfile",
	"features": {
		// add llvm feature
    "ghcr.io/devcontainers-community/features/llvm": {},
		"ghcr.io/devcontainers/features/python:1": {}
	},

	"workspaceMount": "source=${localWorkspaceFolder}/../,target=/workspaces/src/,type=bind",
	"workspaceFolder": "/workspaces/src/isaac_ros_visual_slam",
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-python.black-formatter",
				"ms-python.isort"
			]
		}
	},

  "runArgs": [
		"--name", "isaac_vslam_dev",
    "--cap-add=NET_ADMIN",
    "--privileged",
    "--user=root",
    "--gpus=all",
    "--mount", "type=bind,source=${localEnv:HOME}/workspaces/datasets,target=/datasets",
    "-v", "/dev:/dev",
    "--device-cgroup-rule", "c 81:* rmw",
    "--device-cgroup-rule", "c 189:* rmw",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
  ],

	"remoteEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"QT_X11_NO_MITSHM": "1",
		"QT_QPA_PLATFORM": "xcb",
		"CC": "/usr/bin/clang",
		"CXX": "/usr/bin/clang++"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "cd /workspaces && source /opt/ros/humble/setup.bash && colcon build --symlink-install --cmake-args -DCMAKE_VERBOSE_MAKEFILE:BOOL=ON -DCMAKE_EXPORT_COMPILE_COMMANDS=1"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "admin" // nvidia's idea
}
